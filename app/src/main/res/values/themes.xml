<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.RetailStock" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary color for the app -->
        <item name="colorPrimary">@color/primary_button_color</item>

        <!-- Color for the status bar -->
        <item name="colorPrimaryDark">@color/input_border_color</item>

        <!-- Accent color for UI elements -->
        <item name="colorAccent">@color/accent_text_color</item>

        <!-- Background color for the app -->
        <item name="android:windowBackground">@color/background_color</item>

        <!-- Default text color -->
        <item name="android:textColor">@color/primary_text_color</item>

        <!-- Input field background color -->
        <item name="android:editTextBackground">@color/light_gray_background</item>

        <!-- Placeholder color for EditText and other input fields -->
        <item name="android:textColorHint">@color/secondary_text_color</item>

        <!-- Customize ActionBar -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>

    <!-- Custom ActionBar style -->
    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/primary_button_color</item> <!-- ActionBar background color -->
        <item name="titleTextStyle">@style/ActionBarTitleText</item> <!-- Title text style -->
    </style>

    <!-- ActionBar title text style -->
    <style name="ActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/accent_text_color</item> <!-- Text color for ActionBar title -->
        <item name="android:textSize">24sp</item> <!-- Font size for ActionBar title -->
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary_button_color</item> <!-- Button background color -->
        <item name="android:textColor">@color/primary_button_text_color</item> <!-- Button text color -->
    </style>

    <!-- EditText Style -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/light_gray_background</item> <!-- EditText background color -->
        <item name="android:textColor">@color/primary_text_color</item> <!-- EditText text color -->
        <item name="android:textColorHint">@color/primary_text_color</item> <!-- EditText hint color -->
    </style>
</resources>
